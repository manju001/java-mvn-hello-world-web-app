pipeline {
    agent  { label 'dev'}
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage(copyProject) {
            steps {
                sh 'cd /home/slave3/'
                sh 'git clone https://github.com/manju001/java-mvn-hello-world-web-app.git'
                sh 'pwd'
                sh 'cd /home/slave3/workspace/mavenproject/'
            }
        }
        stage(InstallProcess) {
  		steps {
                	echo 'Build war file'
                	sh 'mvn install'
            	}
	}
         stage(copywarfile) {
           steps {
                    sh 'cd /home/slave3/workspace/mavenproject/target/'
                    sh 'cp /home/slave3/workspace/mavenproject/target/mvn-hello-world.war /opt/tomcat/webapps/'
                    sh 'cd /opt/tomcat/bin'
                    sh './startup.sh'
		}
	   }
	}
}
